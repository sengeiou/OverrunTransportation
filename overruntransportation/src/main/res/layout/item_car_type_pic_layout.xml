<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/shape_query_search_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="7dp">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铰接列车"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/iv_typeImg"
            />

        <CheckBox
            android:id="@+id/cb_sel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:clickable="false"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_typeImg"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/image_cargo_train_2axis"/>
        <TextView
            android:id="@+id/tv_axisNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="轴数："
            android:layout_below="@id/tv_type"
            android:textSize="12sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_wheelNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="轮数："
            android:layout_below="@id/tv_type"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

</LinearLayout>